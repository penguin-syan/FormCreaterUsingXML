<?xml version="1.0" encoding="utf-8"?>
<createForm>
    <page name="page1">
        <title>Sample form 1</title>
        <description>XMLの書き方を示したサンプルフォーム1</description>
        <question id="1">
            <Qtext>Q1:質問文を入力するのじゃ～</Qtext>
            <Qdesc>質問に対する補足を入力するのじゃ～</Qdesc>
            <Qans type="textbox" maxlength="12" required="true">Default text</Qans>
            <Qans type="textarea" maxlength="12" required="true">Default text</Qans>
            <Qans type="number" max="100" min="0" float="false" required="false">Default number</Qans>
            <Qans type="radio" required="false">
                <shuffle>
                    <option onselect="page1">value</option>
                    <option>value</option>
                    <option type="other"></option>
                </shuffle>
            </Qans>
            <Qans type="checkbox" max="3" min="3" required="true">
                <option>value1</option>
                <option>value2</option>
                <option>value3</option>
            </Qans>
            <Qans type="pulldown" required="false">
                <option type="pulldown" onselect="page2">value1</option>
                <option type="pulldown">value2</option>
                <option type="pulldown">value3</option>
            </Qans>
        </question>
    </page>
    <shuffle>
        <page>
        <!-- 区切り線 -->
            <separation></separation>
        </page>
        <page>
          <image src="fileName">figure1</image>
          <video src="fileName" play="any">movie1</video>
          <audio src="fileName" play="any">sound1</audio>
        </page>
    </shuffle>
</createForm>